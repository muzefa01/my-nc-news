{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700"
        }
      ]
    }
  },
    "/api/articles/:article_id/comments": {
      "description": "Fetches all comments for a given article_id",
      "queries": [],
      "exampleResponse": {
        "comments": [
          {
            "comment_id": 1,
            "votes": 10,
            "created_at": "2024-11-26T00:00:00.000Z",
            "author": "jessjelly",
            "body": "Great article!",
            "article_id": 1
          }
        ]
      }
    },
    "/api/articles/:article_id/comments (POST)": {
      "description": "adds a new comment to the specified article",
      "queries": [],
      "exampleRequest": {
        "username": "butter_bridge",
        "body": "This is a new comment"
      },
      "exampleResponse": {
        "comment": {
          "comment_id": 18,
          "article_id": 1,
          "author": "butter_bridge",
          "body": "This is a new comment",
          "votes": 0,
          "created_at": "2024-11-27T14:32:05.123Z"
        }
      }
    }
  
  }
  


